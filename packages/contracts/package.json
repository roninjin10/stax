{
  "private": true,
  "name": "@roninjin10/contracts",
  "version": "0.0.0",
  "main": "src/AppEntrypoint.sol",
  "license": "MIT",
  "scripts": {
    "typecheck": "pnpm tsc --noEmit",
    "build": "forge build",
    "build:optimized": "FOUNDRY_PROFILE=optimized forge build",
    "prettier": "prettier --check src/**/*.sol",
    "prettier:list": "prettier --list-different src/**/*.sol",
    "prettier:fix": "prettier --write src/**/*.sol",
    "solhint": "solhint --config ./.solhint.json 'src/**/*.sol'",
    "solhint:fix": "solhint --config ./.solhint.json 'src/**/*.sol' --fix",
    "lint": "pnpm prettier:fix && pnpm solhint:fix",
    "lint:ci": "pnpm prettier && pnpm solhint",
    "test": "forge test -vvv",
    "test:watch": "forge test -vvv --watch",
    "test:coverage": "forge coverage -vvv --watch",
    "start:devnet": "anvil",
    "predeploy": "source ../../.env",
    "deploy:goerli": "pnpm predeploy && forge script script/AppEntrypoint.s.sol:Deploy --fork-url http://localhost:8545 --broadcast --verify -vvvv",
    "deploy:devnet": "forge script script/AppEntrypoint.s.sol:Deploy --rpc-url http://localhost:8545 --broadcast -vvvv",
    "deploy:optimism": "pnpm predeploy && forge script script/AppEntrypoint.s.sol:Deploy --rpc-url $OPTIMISM_RPC_URL --broadcast --verify -vvvv"
  },
  "devDependencies": {
    "concurrently": "^7.6.0",
    "solhint": "^3.3.7"
  }
}
